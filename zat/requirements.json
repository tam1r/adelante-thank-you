{
  "triggers": {
    "check_thank_you_on_ticket_reopened": {
      "title": "Thank you plugin - When a ticket reopened notify thank you plugin",
      "description": "This trigger created by the thank you plugin",
      "all": [
        {
          "field": "update_type",
          "operator": "is",
          "value": "Change"
        },
        {
          "field": "role",
          "operator": "is",
          "value": "end_user"
        },
        {
          "field": "status",
          "operator": "value_previous",
          "value": "solved"
        },
        {
          "field": "status",
          "operator": "value",
          "value": "open"
        }
      ],
      "actions": [
        {
          "field": "notification_webhook",
          "value": [
            "check_thank_you_webhook",
            "{\"zendeskName\": \"{{ticket.account}}\",\"ticketID\": \"{{ticket.id}}\",\"zendeskURL\": \"{{ticket.url}}\",  \"latestComment\": \"{{ticket.latest_public_comment}}\"}"
          ]
        }
      ]
    }
  },
  "webhooks": {
    "check_thank_you_webhook":  {
      "endpoint": "https://thankyou.getadelante.com/webhook",
      "http_method": "POST",
      "name": "Thank you Plugin",
      "request_format": "json",
      "status": "active"
    }
  }
}