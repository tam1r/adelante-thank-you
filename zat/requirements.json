{
  "triggers": {
    "check_thank_you_on_ticket_reopened": {
      "title": "Thank you plugin - When a ticket reopened notify thank you plugin",
      "description": "This trigger created by the thank you plugin",
      "all": [
        {
          "field": "update_type",
          "operator": "is",
          "value": "Change"
        },
        {
          "field": "role",
          "operator": "is",
          "value": "end_user"
        },
        {
          "field": "status",
          "operator": "value_previous",
          "value": "solved"
        },
        {
          "field": "status",
          "operator": "value",
          "value": "open"
        }
      ],
      "actions": [
        {
          "field": "notification_target",
          "value": [
            "check_thank_you_target",
            "{\"zendeskName\": \"{{ticket.account}}\",\"ticketID\": \"{{ticket.id}}\",\"zendeskURL\": \"{{ticket.url}}\",  \"latestComment\": \"{{ticket.latest_public_comment}}\"}"
          ]
        }
      ]
    }
  },
  "targets": {
    "check_thank_you_target": {
      "title": "Thank you Plugin",
      "type": "http_target",
      "target_url": "https://hook.integromat.com/imnlitclglu87rxrynktu6csqugggo0y",
      "method": "post",
      "content_type": "application/json"
    }
  }
}